<Window x:Class="TextEditor.SaveOrNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor"
        mc:Ignorable="d"
        Title="Save file" Height="200" Width="400" Icon="/579703.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="92.02"/>
            <RowDefinition Height="92.02"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Save file?" VerticalAlignment="Center" FontSize="24"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="YesButton" Content="Yes" Margin="0,10,50,10" Padding="20,1,20,1" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Click="YesButton_Click"/>
            <Button x:Name="NoButton" Content="No" Margin="0,10,0,10" Padding="20,1,20,1" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Click="NoButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
